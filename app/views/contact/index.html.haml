.row
  .span6
    %h1
      = t '.contact_us'
    .web-form
      = form_for @message, :url => contact_index_path do |form|
        - if @message.errors.any?
          #error_explanation
            %h5
              = pluralize(@message.errors.count, 'error')
              prohibited this message from being sent:
            %ul
              - @message.errors.full_messages.each do |msg|
                %li= msg
        .name
          = form.text_field(:name, 'placeholder' => 'Your name*', 'class' => 'span4')
        .email-phone
          = form.email_field(:email, 'placeholder' => 'Your email*', 'class' => 'span2')
          = form.text_field(:phone, 'placeholder' => 'Your phone', 'class' => 'span2')
        .text
          = form.text_area(:text, 'placeholder' => 'Your message', 'class' => 'span4' , 'rows' => '5')
        .options
          %h3
            What kind of services do you need?
          .icons
            .span2
              = form.check_box :service_type1
              = form.label :service_type1, 'Web'
            .span2
              = form.check_box :service_type2
              = form.label :service_type2, 'Mobile'
            .span2
              = form.check_box :service_type3
              = form.label :service_type3, 'Web+Mobile'
        .radios
          %h4
            Im interested in?
          .choose
            = form.radio_button :work_type, '1'
            = form.label :work_type_1, 'Minimum work project'
            = form.radio_button :work_type, '2'
            = form.label :work_type_2, 'Work project from the beginning'
            = form.radio_button :work_type, '3'
            = form.label :work_type_3 do
              Help with existing project
              %br
              Tech. audit
              %br
              Increase in productivity
              %br
              Update to new Rails
              %br
              Service
        .submit-form.text-right
          = submit_tag 'Send Message', :class => 'btn', data: { disable_with: 'Please wait...' }